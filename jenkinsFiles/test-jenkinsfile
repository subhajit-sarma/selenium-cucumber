pipeline {
    agent any

    stages {
        stage('Copy Code to EC2') {
            steps {
                sshagent(['ec2']) {
                    sh """
                    rsync -avz --delete --exclude='.git' ./ $ec2_name:/home/ubuntu/selenium-cucumber
                    """
                }
            }
        }

        stage('Build Docker Image on EC2') {
            steps {
                sshagent(['ec2']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no $ec2_name '
                        cd /home/ubuntu/selenium-cucumber &&
                        docker build -t selenium-tests .
                    '
                    """
                }
            }
        }

        stage('Run Docker Image on EC2') {
            steps {
                sshagent(['ec2']) {
                    sh """
                    ssh -o StrictHostKeyChecking=no $ec2_name '
                        docker run --name selenium-container  --shm-size=2g selenium-tests mvn test -Dcucumber.filter.tags="${params.tags}" -Dbrowser="${params.browser}"
                        mkdir -p /home/ubuntu/reports/target
                        docker cp selenium-container:/app/target/extent-report.html /home/ubuntu/reports/target/extent-report.html
                        docker rm selenium-container
                    '
                    """
                    sh """
                    rsync -avz $ec2_name:/home/ubuntu/reports/target/extent-report.html .
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Finished all stages on EC2"
            sh 'mkdir -p target && mv extent-report.html target/'
            archiveArtifacts artifacts: 'target/extent-report.html', followSymlinks: false
        }
    }
}